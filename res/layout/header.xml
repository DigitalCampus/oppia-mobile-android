<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

        <ImageView
            android:id="@+id/page_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:contentDescription="@string/app_logo_alt"
            android:src="@drawable/dc_logo"/>

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/page_icon"
            android:layout_toLeftOf="@+id/userpoints"
            android:layout_margin="2dp"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            style="@style/HeaderText"/>
        
        
        <TextView
            android:id="@+id/userpoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/userbadges"
            android:layout_centerVertical="true"
            android:background="@drawable/points_background"
            style="@style/PointsText"
            android:layout_margin="4dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/userbadges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/trophy"
            android:drawablePadding="5dp"
            android:layout_margin="4dp"
            android:background="@drawable/points_background"
            style="@style/PointsText"
            android:visibility="gone"/>
</merge>