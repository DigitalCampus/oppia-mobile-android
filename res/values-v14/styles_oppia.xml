<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Oppia.Theme" parent="@style/Theme.Sherlock.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_om</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Om</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Om</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Om</item>
        <item name="android:actionBarTabTextStyle">@style/OM.Light.TabText.Style</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Om</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Om</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_om</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_om</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Om</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>
    
    <style name="Oppia.Theme.Dark" parent="@style/Oppia.Theme">
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <style name="ActionBar.Solid.Om" parent="@style/Widget.Sherlock.ActionBar.Solid">
        <item name="android:background">@drawable/green_background_gradient</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_om</item>
        <item name="android:backgroundSplit">@drawable/ab_stacked_solid_om</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Om</item>
        <item name="android:titleTextStyle">@style/Oppia.ActionBar.TitleTextStyle</item>
    </style>
    
    <style name="Oppia.ActionBar.TitleTextStyle" parent="@style/Widget.Sherlock.ActionBar.Solid">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="OM.Light.TabText.Style" parent="@style/Widget.Sherlock.ActionBar.TabText">       
            <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
            <item name="android:textSize">12sp</item>
            <item name="android:textStyle">normal</item>
            <item name="android:textColor">@color/text_light</item>
            <item name="android:textAllCaps">true</item>
        </style>

    <style name="ActionBar.Transparent.Om" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/ab_transparent_om</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Om</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Om.Widget" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/PopupMenu.Om</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Om</item>
    </style>

</resources>