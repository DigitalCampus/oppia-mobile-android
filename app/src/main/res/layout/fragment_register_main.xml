<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar_background_gradient"
        android:paddingLeft="30dp"
        android:paddingTop="@android:dimen/notification_large_icon_height"
        android:paddingBottom="@dimen/padding_large"
        android:text="@string/tab_title_register"
        android:textAppearance="@style/SectionHeader"
        android:textColor="@color/text_light" />

    <LinearLayout
        android:id="@+id/view_register_role_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_header"
        android:layout_above="@id/form_bottom"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium"
        android:layout_marginTop="@dimen/margin_medium">


        <TextView
            style="@style/SubheaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_select_role_explanation"
            android:layout_gravity="left"
            android:textSize="17sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reg_cha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="CHA" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reg_chss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="CHSS" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reg_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Other" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_register_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_header"
        android:layout_above="@id/form_bottom"/>


    <LinearLayout
        android:id="@+id/form_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/background_light"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_large"
        android:paddingTop="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_large"
        android:paddingBottom="@dimen/padding_medium">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="0">

            <TextView
                style="@style/SubheaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/register_account_already" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/action_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/tab_title_login" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/register_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_weight="2"
            android:text="@string/register_btn_text"
            android:theme="@style/PrimaryButton"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
