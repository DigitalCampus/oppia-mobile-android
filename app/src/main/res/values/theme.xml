<resources xmlns:tools="http://schemas.android.com/tools">
    <!--  Main color for actionBar, buttons, etc  -->
    <color name="theme_primary">@color/irt_primary</color>
    <color name="theme_primary_dark">@color/irt_primary_dark</color>
    <!--  Secondary color: input tint, scorecard color, etc  -->
    <color name="theme_secondary">@color/irt_secondary_light</color>
    <color name="theme_secondary_light">@color/irt_secondary_light</color>
    <!--  launcher icon drawable  -->
    <item name="app_icon" type="drawable">@drawable/ee_logo_no_text</item>
    <!--  Drawables for brand icon and course default image  -->
    <item name="brand_icon" type="drawable">@drawable/ee_logo_with_text</item>
    <item name="brand_icon_white_bg" type="drawable">@drawable/ee_logo_with_text_white_bg</item>
    <item name="course_icon_placeholder" type="drawable">@drawable/ee_logo_no_text</item>
    <!--  Color used for dropdown menus and list tints, it is "theme_secondary_light" with transparency  -->
    <color name="theme_focus_semitransparent">#cc00AB9F</color>
    <!--  added 80%(CC) transparency  -->
    <color name="theme_tint_almosttransparent">#4000AB9F</color>
    <!--  added 25%(40) transparency  -->
    <!--  Color used for highlight dark text  -->
    <color name="theme_dark">@color/irt_primary_dark</color>
    <!--  Toolbar  -->
    <color name="toolbar_bg_color">@color/irt_primary</color>
    <color name="toolbar_text_color">@color/white</color>
    <color name="toolbar_icon_color">@color/white</color>
    <color name="statusbar_color">@color/black</color>
    <color name="subtitle_bar">@color/theme_secondary_light</color>

    <!-- Subtitle bar -->
    <color name="subtitle_bar_bg_color">@color/theme_secondary_light</color>
    <color name="subtitle_bar_text_color">@color/text_dark</color>
    <color name="subtitle_bar_icon_color">@color/text_dark</color>

    <!-- Drawer -->
    <color name="drawer_bg">@color/background_light</color>
    <color name="drawer_text">@color/text_dark</color>
    <color name="drawer_subtitle">@color/theme_secondary</color>
    <color name="drawer_icontint">@color/default_icon_foreground</color>
    <color name="drawer_divider">@color/highlight_separator</color>

    <!-- Register steps indicators -->
    <color name="register_steps_indicator_circleColor">@color/theme_primary</color>
    <color name="register_steps_indicator_doneColor">@color/theme_secondary</color>
    <color name="register_steps_indicator_lineColor">@color/theme_secondary</color>

    <!-- TabLayout and filter tabs -->
    <color name="tab_bg_color">#e0dde2</color>
    <color name="tab_indicator">@color/irt_orange</color>
    <color name="tab_text_color">@color/text_dark</color>
    <color name="tab_selected_text_color">@color/text_dark</color>
    <color name="tab_chip_color">@color/irt_orange</color>
    <!--  Other common elements  -->
    <color name="listitem_icon_tint">@color/theme_primary</color>
    <color name="listitem_action_item_tint">@color/quiz_navigation_button</color>
    <color name="design_snackbar_background_color" tools:override="true">@color/theme_primary</color>
    <color name="gamification_snackbar_gradient_start">@color/irt_secondary</color>
    <color name="gamification_snackbar_gradient_end">@color/irt_primary</color>
    <color name="points_badge">@color/irt_orange</color>
    <color name="quiz_attempted">@color/irt_teal_dark</color>
    <color name="quiz_passed">@color/irt_orange</color>
    <!--  Course index  -->
    <color name="course_index_section_title">@color/text_dark</color>
    <color name="course_index_highlight">@color/theme_secondary</color>
    <!--  Chart colors  -->
    <color name="piechart_completed">@color/theme_primary</color>
    <color name="chart_line_color">@color/irt_teal_dark</color>
    <color name="chart_dots_color">@color/theme_secondary_light</color>
    <color name="chart_gradient_start">@color/theme_secondary</color>
    <color name="chart_gradient_end">@color/theme_secondary_light</color>
    <!--  Colors for activity chart lines  -->
    <color name="chart_line_activity_all">#000000</color>
    <color name="chart_line_activity_completed">@color/irt_teal</color>
    <color name="chart_line_media_watched">@color/irt_primary</color>
    <color name="chart_line_course_downloaded">@color/irt_orange</color>
    <color name="chart_line_quiz_attempt">@color/theme_secondary</color>
</resources>