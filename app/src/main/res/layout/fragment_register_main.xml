<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_toolbar"
        android:paddingLeft="30dp"
        android:paddingTop="@android:dimen/notification_large_icon_height"
        android:paddingBottom="@dimen/padding_large"
        android:text="@string/tab_title_register"
        android:textAppearance="@style/SectionHeader"
        android:textColor="@color/text_light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/form_bottom"
        android:layout_below="@+id/view_header">

        <LinearLayout
            android:id="@+id/view_register_role_selection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:visibility="visible">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/register_select_role_explanation"
                android:textSize="17sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_reg_cha"
                style="@style/ButtonSelectRole"
                android:text="@string/cha_role" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_reg_chss"
                style="@style/ButtonSelectRole"
                android:text="@string/chss_role" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_reg_other"
                style="@style/ButtonSelectRole"
                android:text="@string/other_role"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/view_other_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal|bottom"
                android:orientation="horizontal"
                android:visibility="gone">

                <org.digitalcampus.oppia.utils.ui.fields.ValidableTextInputLayout
                    android:id="@+id/edit_other_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:required="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:hint="@string/other_position"
                        android:inputType="textCapSentences" />

                </org.digitalcampus.oppia.utils.ui.fields.ValidableTextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_reg_other_continue"
                    style="@style/ButtonSelectRole"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="@string/continue_str" />
            </LinearLayout>

            <View style="@style/ExpansorVert" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/frame_register_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/form_bottom"
        android:layout_below="@+id/view_header" />


    <LinearLayout
        android:id="@+id/form_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/background_light"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_large"
        android:paddingTop="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_large"
        android:paddingBottom="@dimen/padding_medium">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/SubheaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/register_account_already" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/action_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/tab_title_login" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
