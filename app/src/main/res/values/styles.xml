<resources
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Menu Drawer -->
    <style name="TextMenuItem" parent="TextBase">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="MenuItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_pressable</item>
    </style>

    <style name="MenuIcon">
        <item name="android:layout_width">23dp</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="tint">@color/black</item>
    </style>
    <!-- Menu Drawer -->


    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_toolbar</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SectionHeader">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="fontPath">fonts/lato.ttf</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/padding_medium</item>

    </style>

    <style name="HeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="SubheaderText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="fontPath">fonts/lato.ttf</item>
    </style>

    <style name="ButtonText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="ButtonTextSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="PageHeadingText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="FieldLabelText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FieldText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MediumTextDarkItalic">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="MediumTextItalic">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="SmallTextLight">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="SmallTextLightItalic">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="SmallTextDarkItalic">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="SmallTextDark">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="SmallTextGrey">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="PointsText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="fontPath">fonts/montserrat.ttf</item>
    </style>

    <style name="TabText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NormalTextDark">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="NormalTextBoldDark" parent="NormalTextDark">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Highlight.Separator" parent="android:Widget">
        <item name="android:layout_width">0.7dp</item>
        <item name="android:background">@color/highlight_separator</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginBottom">@dimen/padding_medium</item>
        <item name="android:layout_marginTop">@dimen/padding_medium</item>
    </style>

    <style name="Highlight.Text" parent="android:TextAppearance">
        <item name="android:textSize">29sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/padding_medium</item>
        <item name="fontPath">fonts/montserrat.ttf</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_alignParentLeft">false</item>
        <item name="android:layout_alignParentRight">false</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="CourseTitle" parent="android:TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="fontPath">fonts/lato.ttf</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="Highlight.Title" parent="android:TextAppearance.Medium">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/padding_medium</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/padding_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Highlight.Label" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/highlight_label</item>
    </style>

    <style name="Oppia.Theme.InputError" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">-15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_error</item>
    </style>

    <style name="ScorecardPie.Label" parent="android:TextAppearance">
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginTop">-18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/highlight_label</item>
    </style>

    <style name="ScorecardPie.Label.Separator" parent="android:Widget">
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">@color/highlight_separator</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="ContextMenuText" parent="android:TextAppearance.Medium">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="ScrollableLayoutHeaderText">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="fontPath">fonts/lato.ttf</item>
    </style>


    <style name="CollapsedToolbarHeader" parent="android:TextAppearance">
        <item name="fontPath">fonts/lato.ttf</item>
    </style>

    <style name="Oppia.Theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Oppia.Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Oppia.Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TabLayoutAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_tab_time_plots</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/bg_tab_text</item>
        <item name="android:textColor">@color/text_tab</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="Oppia.Theme.CardTitle" parent="NormalTextDark">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Oppia.Theme.CardBadge" parent="SmallTextDarkItalic">
        <item name="android:textColor">@color/text_light</item>
        <item name="fontPath">fonts/montserrat.ttf</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Oppia.CustomField.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/form_label</item>
        <item name="errorTextAppearance">@style/Oppia.CustomField.TextInputLayoutError</item>
        <item name="hintTextAppearance">@style/Oppia.CustomField.TextInputLayoutHint</item>
    </style>

    <style name="Oppia.CustomField.TextInputLayoutHint" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/form_label</item>
        <item name="color">@color/form_label</item>
        <item name="android:textSize">@dimen/hint_text_size</item>
    </style>

    <style name="Oppia.CustomField.TextInputLayoutLabel" parent="Oppia.CustomField.TextInputLayoutHint">
        <item name="android:textColor">@color/theme_secondary</item>
        <item name="color">@color/theme_secondary</item>
        <item name="android:textSize">@dimen/hint_text_size</item>
    </style>

    <style name="Oppia.CustomField.TextInputLayoutError" parent="TextAppearance.Design.Error" />


</resources>
