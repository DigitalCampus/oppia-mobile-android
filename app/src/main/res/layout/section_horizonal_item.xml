<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_object"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp">

        <ImageView
            android:id="@+id/activity_image"
            android:layout_width="135dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            android:background="@color/activity_icon_background"
            android:contentDescription="@string/alt_activity_icon"
            android:src="@drawable/default_icon_activity"/>

        <TextView
            android:id="@+id/activity_title"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center|center_horizontal"
            android:lines="2"
            android:singleLine="false"
            android:textColor="@color/text_light"
            android:textSize="14sp"
            android:textStyle="normal"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/completed_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:foregroundGravity="right"
        app:srcCompat="@drawable/completed_badge"/>

</FrameLayout>
