<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/reset_password_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/HeaderText"
            android:layout_marginTop="@android:dimen/notification_large_icon_height"
            android:padding="5dp"
            android:text="@string/reset_password"/>

        <TextView
            android:id="@+id/reset_password_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/reset_password_description"
            android:textColor="@color/text_grey"/>

        <TextView
            android:id="@+id/reset_username_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@android:dimen/notification_large_icon_height"
            android:padding="5dp"
            android:text="@string/reset_password_field"
            android:textColor="@color/text_grey"/>

        <EditText
            android:id="@+id/reset_username_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:padding="5dp"/>

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_btn_reset_password"/>

    </LinearLayout>

</ScrollView>