<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_media_missing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/subtitle_bar"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/padding_medium"
    android:weightSum="1.0">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_media_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/padding_medium"
        android:layout_marginLeft="@dimen/padding_medium"
        android:text="@string/scan_media_download_button"
        android:textColor="@color/text_dark" />

    <TextView
        android:id="@+id/tv_media_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/btn_media_download"
        android:layout_toLeftOf="@id/btn_media_download"
        android:gravity="center_vertical"
        android:textColor="@color/text_dark"
        android:textSize="14sp" />

</RelativeLayout>