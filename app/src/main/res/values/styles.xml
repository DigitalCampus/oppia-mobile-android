<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/actionbar_background_gradient</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="ButtonText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="ButtonTextSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="PageHeadingText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="FieldLabelText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FieldText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MediumTextDarkItalic">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

     <style name="MediumTextItalic">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_light</item>
    </style>
    
    <style name="SmallTextLight">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="SmallTextLightItalic">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="SmallTextDarkItalic">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="SmallTextDark">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="SmallTextGrey">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="PointsText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="NormalTextDark">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>
    
    <style name="NormalTextBoldDark">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Highlight.Separator" parent="android:Widget">
        <item name="android:layout_width">0.7dp</item>
        <item name="android:background">@color/highlight_separator</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginBottom">@dimen/padding_medium</item>
        <item name="android:layout_marginTop">@dimen/padding_medium</item>
    </style>

    <style name="Highlight.Text" parent="android:TextAppearance">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_alignParentLeft">false</item>
        <item name="android:layout_alignParentRight">false</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Highlight.Title" parent="android:TextAppearance.Medium">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/padding_medium</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/padding_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Highlight.Label" parent="android:TextAppearance">
    <item name="android:textSize">12sp</item>
    <item name="android:layout_marginTop">-5dp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:gravity">center</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@color/highlight_label</item>
</style>

    <style name="Oppia.Theme.InputError" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">-15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_error</item>
    </style>

    <style name="ScorecardPie.Label" parent="android:TextAppearance">
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginTop">-7dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/highlight_label</item>
    </style>

    <style name="ScorecardPie.Label.Separator" parent="android:Widget">
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">@color/highlight_separator</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="ContextMenuText" parent="android:TextAppearance.Medium">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

</resources>