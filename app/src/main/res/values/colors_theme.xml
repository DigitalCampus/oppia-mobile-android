<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Main color for actionBar, buttons, etc -->
    <color name="theme_primary">@color/cha_purple</color>
    <color name="theme_primary_dark">@color/cha_purple_dark</color>
    <!-- Secondary color: input tint, scorecard color, etc -->
    <color name="theme_secondary">@color/cha_emerald</color>
    <color name="theme_secondary_light">@color/cha_emerald_light</color>

    <!-- Color used for dropdown menus and list tints, it is "theme_secondary_light" with transparency -->
    <color name="theme_focus_semitransparent">#cc00AB9F</color> <!-- added 80%(CC) transparency -->
    <color name="theme_tint_almosttransparent">#4000AB9F</color> <!-- added 25%(40) transparency -->

    <!-- Color used for highlight dark text -->
    <color name="theme_dark">@color/cha_purple_dark</color>

    <!-- Toolbar -->
    <color name="toolbar_bg_color">@color/black</color>
    <color name="toolbar_icon_color">@color/white</color>
    <color name="statusbar_color">@color/black</color>
    <color name="subtitle_bar">@color/theme_primary</color>


    <color name="drawer_bg">@color/black</color>
    <color name="drawer_text">@color/text_light</color>
    <color name="drawer_subtitle">@color/theme_primary</color>
    <color name="drawer_icontint">@color/cha_light_purple</color>
    <color name="drawer_divider">@color/grey_dark</color>


    <!-- TabLayout and filter tabs -->
    <color name="tab_bg_color">#e0dde2</color>
    <color name="tab_indicator">@color/cha_orange</color>
    <color name="tab_text_color">@color/text_dark</color>
    <color name="tab_selected_text_color">@color/text_dark</color>
    <color name="tab_chip_color">@color/cha_orange</color>

    <!-- Other common elements -->
    <color name="listitem_icon_tint">@color/theme_primary</color>
    <color name="design_snackbar_background_color" tools:override="true">@color/theme_primary</color>
    <color name="gamification_snackbar_gradient_start">@color/cha_emerald</color>
    <color name="gamification_snackbar_gradient_end">@color/cha_emerald_dark</color>

    <color name="points_badge">@color/cha_emerald_dark</color>

    <color name="quiz_attempted">@color/theme_secondary</color>
    <color name="quiz_passed">@color/theme_secondary_light</color>

    <!-- Course index -->
    <color name="course_index_section_title">@color/text_dark</color>
    <color name="course_index_highlight">@color/theme_secondary</color>

    <!-- Chart colors -->
    <color name="piechart_completed">@color/theme_primary</color>
    <color name="chart_line_color">@color/cha_emerald_dark</color>
    <color name="chart_dots_color">@color/theme_secondary_light</color>
    <color name="chart_gradient_start">@color/theme_secondary</color>
    <color name="chart_gradient_end">@color/theme_secondary_light</color>

    <!-- Colors for activity chart lines -->
    <color name="chart_line_activity_all">#000000</color>
    <color name="chart_line_activity_completed">@color/cha_emerald</color>
    <color name="chart_line_media_watched">@color/lmh_blue</color>
    <color name="chart_line_course_downloaded">@color/cha_orange</color>
    <color name="chart_line_quiz_attempt">@color/theme_primary_dark</color>
</resources>